{
  "manifest_version": 2,

  "name": "Remocon for Pooq",
  "version": "0.2.1",
  "default_locale": "ko",

  "description": "키보드로 Pooq를 편리하게 이용할 수 있습니다. (전체화면, 채널, 재생목록 보기 지원)",

  "browser_action": 
  {
    "default_popup": "popup.html",
    "default_title": "Remocon for Pooq"
  },

  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png" },

  "content_scripts": [
    {
      "matches" : ["http://www.pooq.co.kr/player/*"],
      "js": [ "js/jquery-1.11.2.js",
              "js/contentscript.js"]

    }
  ],

  "web_accessible_resources": ["js/remopooq.js"],

  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'"

}
